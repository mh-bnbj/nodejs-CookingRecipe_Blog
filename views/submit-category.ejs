<div class="px-4 py-3 mt-3 mb-4 text-center">
	<h1 class="display-5 fw-bold">Add Category</h1>

</div>

<div class="row justify-content-center">

	<% if(infoSubmitObj != ''){ %>
	<div class="col-8 alert alert-success mb-4" role="alert">
		<%= infoSubmitObj %>
	</div>
	<% } %>

	<% if(infoErrorObj != ''){ %>
	<div class="col-8 alert alert-danger mb-4" role="alert">
		<%= infoErrorObj %>
	</div>
	<% } %>

	<div class="col-8 mt-3">
		<form action="/submit-category" enctype="multipart/form-data" method="POST">
			<div class="row g-3">

				<div class="col-12">
					<label for="name" class="form-label">Category Name</label>
					<input type="text" name="name" id="name" class="form-control">
				</div>

				<div class="col-12 mt-4 pt-2">
					<label for="image">Category Image</label>
					<input type="file" class="form-control" name="image" accept="image/*">
				</div>

				<div class="col-12">
					<button type="submit" class="btn btn-primary">Submit Category</button>
				</div>
			</div>
		</form>
	</div>
</div>