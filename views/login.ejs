<html>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

	<title>Cooking Blog - Login</title>

	<link href="/css/bootstrap.css" rel="stylesheet" />
	<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" /> -->
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet" />

	<link href="/css/signin.css" rel="stylesheet" />
</head>

<body>
	<div class="container-lg py-4 h-auto mb-2">
		<div class="row d-flex justify-content-center align-items-center ">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="bg-white shadow-lg text-dark card" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">

						<div class="mb-md-2 pb-5">
							<div class="col-12 mb-3 d-md-flex justify-content-md-between align-items-md-center">
								<a href="/" class="col-12 d-flex justify-content-center justify-content-md-start align-items-center col-md-3 mb-3 mb-sm-0 text-dark text-decoration-none ">
									<img src="/img/logo.svg" width="229" height="68" alt="Cooking Blog -Made with Node.js">
								</a>
								<h2 class="fw-bold mt-3 mt-md-0 mb-2 text-uppercase">Login</h2>
							</div>

							<% for (const key in flash) { %>
							<div class="alert alert-<%= key === 'error'?'danger':key %>" role="alert">
								<%= flash[key] %>
							</div>
							<% } %>

							<form action="/login" method="post">
								<div class="form-outline form-dark mb-4 mt-5">
									<label class="form-label" for="Username-input">Username</label>
									<input type="text" id="Username-input" name="username" class="form-control form-control-lg" />
								</div>

								<div class="form-outline form-dark mb-4">
									<label class="form-label" for="password-input">Password</label>
									<input type="password" id="password-input" name="password" class="form-control form-control-lg" />
								</div>

								<div class="mb-5 form-check form-outline text-start">
									<label class="form-check-label text-start" for="admin-input" style="cursor: pointer;">admin</label>
									<input type="checkbox" name="admin" class="form-check-input" id="admin-input" style="cursor: pointer;">
								</div>


								<button class="btn btn-outline-success  btn-lg px-5 " type="submit">Login</button>

							</form>

						</div>

						<div>
							<p class="mb-0">Don't have an account? <a href="/signup" class="text-dark-50 fw-bold">Sign Up</a>
							</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</body>

</html>